{
  "name": "ts-lib-starter",
  "version": "0.0.2",
  "description": "Start Node.js / ECMAScript 6 module with TypeScript",
  "main": "lib/main/index.js",
  "module": "lib/module/index.js",
  "types": "lib/types/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "engines": {
    "node": ">=14.18.20"
  },
  "scripts": {
    "build": "npm run build:main && npm run build:es6",
    "build:main": "rimraf lib/main && tsc -p tsconfig.build.json",
    "build:es6": "rimraf lib/module && ttsc -p tsconfig.build.es6.json",
    "lint": "rome check src",
    "format": "rome format --write src",
    "test": "mocha"
  },
  "author": {
    "name": "kukhariev",
    "email": "q_h@inbox.ru"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "4.3.3",
    "@types/mocha": "9.1.1",
    "@types/node": "14.18.28",
    "@types/rimraf": "3.0.2",
    "@zoltu/typescript-transformer-append-js-extension": "1.0.1",
    "chai": "4.3.6",
    "mocha": "10.0.0",
    "rimraf": "3.0.2",
    "rome": "^0.9.2-next",
    "ts-node-dev": "2.0.0",
    "ttypescript": "1.5.13",
    "typescript": "4.7.4"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": "**/*.spec.ts",
    "require": "ts-node/register"
  }
}